<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_std"
    tools:context=".AboutActivity">

    <ImageView
        android:id="@+id/imageview_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_null"
        android:layout_weight = "50"
        android:layout_marginBottom="@dimen/margin_std"
        android:cropToPadding="true"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/cd_about_image" />

    <TextView
        android:id="@+id/textview_key_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_null"
        android:layout_weight="10"
        android:layout_marginStart="@dimen/margin_desc_start"
        android:layout_marginTop="@dimen/margin_std"
        android:layout_marginEnd="@dimen/margin_std"
        android:layout_marginBottom="@dimen/margin_std"
        android:text="@string/key_info"
        android:textSize="@dimen/textsize_std" />

    <TextView
        android:id="@+id/textview_description"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_null"
        android:layout_weight="40"
        android:text="@string/description"
        android:layout_marginStart="@dimen/margin_desc_start"
        android:layout_marginTop="@dimen/margin_std"
        android:layout_marginEnd="@dimen/margin_std"
        android:layout_marginBottom="@dimen/margin_std"
        android:textSize="@dimen/textsize_std" />

    <EditText
        android:id="@+id/edittext_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_null"
        android:layout_weight="15"
        android:inputType="text"
        android:hint="@string/edittext_hint"
        android:layout_margin="@dimen/margin_std"
        android:importantForAutofill="no"
        tools:targetApi="o" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/margin_std"
        android:text="@string/button_send_message"
        android:background="@color/colorBackground"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="@dimen/margin_std">
        <ImageButton
            android:id="@+id/button_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:src="@drawable/github_32px"
            android:layout_marginEnd="@dimen/margin_std"
            android:contentDescription="@string/cd_github" />
        <ImageButton
            android:id="@+id/button_telegram"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/tele_32px"
            android:layout_marginStart="@dimen/margin_std"
            android:contentDescription="@string/cd_telegram" />

    </LinearLayout>

</LinearLayout>