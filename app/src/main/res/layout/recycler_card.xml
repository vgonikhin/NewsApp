<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_news_item"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="@dimen/half_margin"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="@dimen/std_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview_category"
            android:layout_width="@dimen/size_null"
            android:layout_height="wrap_content"
            android:maxLines="1"
            card_view:layout_constraintEnd_toStartOf="@id/imageview_news_picture"
            card_view:layout_constraintStart_toStartOf="parent"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="@dimen/size_null"
            android:layout_height="wrap_content"
            android:maxLines="2"
            card_view:layout_constraintEnd_toStartOf="@id/imageview_news_picture"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/textview_category"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/textview_preview_text"
            android:layout_width="@dimen/size_null"
            android:layout_height="wrap_content"
            android:maxLines="4"
            card_view:layout_constraintEnd_toStartOf="@id/imageview_news_picture"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/textview_title"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintBottom_toBottomOf="parent"
            tools:text="@tools:sample/date/ddmmyy" />

        <ImageView
            android:id="@+id/imageview_news_picture"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:contentDescription="@string/cd_news_picture"
            card_view:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
